<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.design.widget.TabLayout
        android:id="@+id/order_tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_45"
        app:tabBackground="@color/color_ffffff"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/color_212121"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/color_757575" />

    <android.support.v4.view.ViewPager
        android:id="@+id/order_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>



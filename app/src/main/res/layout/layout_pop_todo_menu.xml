<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/qb_px_180"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/qb_px_10"
    android:paddingBottom="@dimen/qb_px_10"
    android:paddingTop="@dimen/qb_px_10"
    android:translationZ="@dimen/qb_px_10">

    <LinearLayout
        android:layout_width="@dimen/qb_px_180"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rectangle_white_press"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_todo_done"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_45"
            android:gravity="center"
            android:text="标记已完成"
            android:textColor="@color/color_212121"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_todo_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_45"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/color_212121"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_todo_delete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_45"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/color_212121"
            android:textSize="15sp" />


    </LinearLayout>
</android.support.v7.widget.CardView>
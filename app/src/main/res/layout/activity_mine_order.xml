<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.ToDoListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <include layout="@layout/toolbar_base_layout" />

        <android.support.design.widget.TabLayout
            android:id="@+id/order_tablayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:tabBackground="@color/colorPrimary"
            app:tabIndicatorColor="@color/color_ffffff"
            app:tabSelectedTextColor="@color/color_ffffff"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="@color/color_60white" />
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/order_viewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>